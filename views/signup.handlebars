<!DOCTYPE html>
<html>

<body>
    <div class="container">
        <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
            <div class="col-6">
                <form id="signup" action="/signup" method="post" class="border p-4 rounded">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address:</label>
                        <input class="form-control is-valid" name="email" type="email">
                    </div>
                    <div class="mb-3">
                        <label for="firstname" class="form-label">First Name:</label>
                        <input class="form-control is-info" name="firstname" type="text">
                    </div>
                    <div class="mb-3">
                        <label for="lastname" class="form-label">Last Name:</label>
                        <input class="form-control is-success" name="lastname" type="text">
                    </div>
                    <div class="mb-3">
                        <label for="username" class="form-label">User Name:</label>
                        <input class="form-control is-warning" name="username" type="text">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password:</label>
                        <input class="form-control is-danger" name="password" type="password">
                    </div>
                    <hr>
                    <div class="mb-3">
                        <button class="btn btn-info" type="submit" value="Sign-up">Sign-up</button>
                        <button class="btn btn-info" type="button" id="cancel">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>

    <script>
        $("#cancel").on("click", function(event){
            window.history.back();
            return false;
        });
    </script>
</body>

</html>